<%= render 'layouts/public_header' %>
<%= render 'questions_search', q: @q, url: questions_path %>
<%= link_to "質問する", new_question_path %>
<h4>受付中の質問</h4>
<% @questions.each do |question| %>
  <p><%= link_to question.title, question_path(question.id) %></p>
  <p>質問カテゴリ：<%= question.category %></p>
  <p>ユーザーネーム：<%= question.customer.nickname %></p>
  <p>投稿日：<%= question.created_at.strftime('%Y/%m/%d') %></p>
  <p>回答件数：<%= question.answers.count %>件</p>
<% end %>
