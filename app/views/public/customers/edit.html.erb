<%= flash[:notice] %>
<%= render 'layouts/public_header' %>
<h2>プロフィール編集</h2>
<%= form_with model: @customer do |f| %>
  <label for="inputName">Nickname</label>
  <%= f.text_field :nickname, autofocus: true, id:"inputNickname", placeholder:"名前"%>
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  <%= f.submit "変更を保存" %>
<% end %>